{% extends 'base.html.twig' %}

{% block title %}Momentum | Log In {% endblock %}

{% block stylesheets %}
    <link href="css/registerpage.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    
    <div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                        <h3 class="panel-title"><img src="images/logo/logo-green_blue2_nobg.png" alt="logo" id="logo"></h3>
                        </div>
                        <div class="panel-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control input-sm'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control input-sm'}}) }}
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                            </div>
                            
                            {% if form_errors is defined and form_errors|length > 0 %}
                                <div class="error-list">
                                    <small>{{ form_errors }}</small>
                                </div>
                            {% endif %}
                            
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-info btn-block'}}) }}
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
{% endblock %}