{% extends 'base.html.twig' %}


{% block title %}Momentum{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="container">
        <div class="row content-field">
            <div id="post-list" class="col-md-offset-1 col-md-7">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="post-field">
                            <input type="text" class="form-control" placeholder="Share your problem, suggestion or wish...">  
                        </div><!-- /input-group -->
                    </li>
                    {% for postId in 0..3 %}
                    <li class="list-group-item">
                        <div class="well-card">
                            <div class="row">
                                <div>
                                    <a class="pull-left post-link" href=""><small>#{{postId}}</small></a>
                                </div>
                            </div> 
                            <div class="row">
                                <div>
                                    <p class="lead-text">Ovo je post na koji jos korisnik nije glsao. Pise broj glasova i ima mogucnost da se glasa pritoskom na vote up. Ne znam da li da sve objave imaju istu velicinu prozora ili da se one podesavaju u zavisnosti od teksta, mada je svakako broj karaktera ogranicen. najvjerovatnije cu postaviti da je velicina posta ista za svaku objavu.
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div>							
                                    <a href="#" class="upvote-button">
                                        <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                                        <span>Vote up!</span>
                                    </a>
                                    <span class="vote-count">
                                        <small>â€¢</small>
                                        <span>123</span>
                                    </span>
                                <span class="pull-right date">Mar 7</span>
                                </div>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class ="col-sm-3">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-heading">
                        <div class="well-card">
                                    <div >
                                        <span class="glyphicon glyphicon-signal icon-size-tree"></span> <strong> &nbspSkupstina za</strong>
                                        1 dan.
                                    </div>
                        </div>
                    </li>

                    <li class="list-group-item">
                        <div class="well-card">

                            <div class="update-nag">
                                <div class="update-split update-danger"><i class="glyphicon glyphicon-warning-sign"></i></div>
                                <div class="update-text"> <strong>#886903 </strong>, je odbacen.&nbsp&nbsp<b class="time-timeline">18:25</b> </div>
                        </div>


                        </div>
                    </li>
                        <li class="list-group-item">
                            <div class="well-card">

                                <div class="update-nag">
                                    <div class="update-split update-succes"><i class="glyphicon glyphicon-cog"></i></div>
                                    <div class="update-text"> <strong> #886903</strong>, se razmatra.&nbsp&nbsp<b class="time-timeline">18:25</b> </div>
                                </div>


                            </div>
                        </li>
                    <li class="list-group-item">
                        <div class="well-card">

                            <div class="update-nag">
                                <div class="update-split update-succes"><i class="glyphicon glyphicon-cog"></i></div>
                                <div class="update-text"> <strong> #886903</strong>, se razmatra. &nbsp&nbsp<b class="time-timeline">18:25</b></div>
                            </div>


                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="well-card">

                            <div class="update-nag">
                                <div class="update-split update-success"><i class="glyphicon glyphicon-leaf"></i></div>
                                <div class="update-text "> <strong>#886903 </strong>, je rjesen. &nbsp&nbsp&nbsp&nbsp<b class="time-timeline ">18:25</b></div>
                            </div>


                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="well-card">

                            <div class="update-nag">
                                <div class="update-split "><i class="glyphicon glyphicon-cog"></i></div>
                                <div class="update-text"> <strong> #886903</strong>, se razmatra. &nbsp&nbsp<b class="time-timeline">18:25</b></div>
                            </div>


                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
