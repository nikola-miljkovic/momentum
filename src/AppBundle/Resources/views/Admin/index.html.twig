{% extends "::base.html.twig" %}

{% block title %}AppBundle:Admin:Index{% endblock %}

{% block body %}
<h1>Welcome to the Admin:Index page</h1>
    {{ form_start(form) }}
        {{ form_widget(form.searchUser) }}
        {{ form_widget(form.searchPost) }}
    {{ form_end(form) }}
    <ul>
    {% for user in users %}
        <li>{{ user.username }}</li>
    {% endfor %}
    </ul>
    <ul>
    {% for post in posts %}
        <li>{{ post.content }}</li>
    {% endfor %}
    </ul>
{% endblock %}

